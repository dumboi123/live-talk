generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  avatar    String?
  email     String   @unique
  name      String
  displayName String?
  password  String
  friends   User[]
  status    enum('Online', 'Offline', 'Busy')   @default("Online")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversation {
  id       Int      @id @default(autoincrement())
  type     enum('Direct', 'Group') @default("Direct")
    members  User[]
  messages String[]

  title    String?
  creatorId  Int?
  avatar   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id             Int      @id @default(autoincrement())
  senderId       Int
  content        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}